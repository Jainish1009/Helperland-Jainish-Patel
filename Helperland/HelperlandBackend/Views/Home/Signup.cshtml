@model RegModel
@{
    ViewData["Title"] = "Signup";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}


<body>
    @Html.Partial("_Login")
    <link href="~/css/about.css" rel="stylesheet" />
    <link href="~/css/signup.css" rel="stylesheet" />
    <link href="~/css/serviceprovider.css" rel="stylesheet" />

    <div class="frmcont1 container">
        <div class="container">
            <p class="faq2">Create an account</p>
            <div class="imgcont">
                <div class="line">
                    <figure><img src="~/assets/img/star.png" alt=""></figure>
                </div>
                </br>

            </div>
        </div>

        <form method="post" asp-action="Signup">
            <div class="frm">
                <div class="frm1">
                    <input type="text" asp-for="FirstName" placeholder="First name">
                    <span class="text-danger" asp-validation-for="FirstName"></span>
                    <input type="text" asp-for="LastName" placeholder="Last name">
                    <span class="text-danger" asp-validation-for="LastName"></span>
                </div>
                <div class="frm1">
                    <input type="email" asp-for="Email" placeholder="Email address">
                    <span class="text-danger" asp-validation-for="Email"></span>
                    <div class="phn1"><input list="code" name="code" class="pc1" value="+46"> <input type="tel" class="pc2" asp-for="PhoneNumber" placeholder="Phone number"></div>
                    <span class="text-danger" asp-validation-for="PhoneNumber"></span>
                </div>
                <div class="frm1">
                    <input type="password" asp-for="PassWord" placeholder="Password">
                    <span class="text-danger" asp-validation-for="PassWord"></span>
                    <input type="password" asp-for="ConfirmPassword" placeholder="Confirm Password">
                    <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                </div>
            </div>
            <div class="div3">

                <input type="checkbox" id="termsandcon" name="termsandcon" value="termsandcon">
                <label for="termsandcon"> I have read the privacy policy</label>

                <div class="button">
                    <button type="submit" class="btn1">Register</button><br><br>
                    <p>Already registered? <a class="setPointer forgotLink" id="login-link" data-dismiss="modal" data-toggle="modal" data-target="#loginModal" style="cursor: pointer; text-decoration: underline; color: blue;">Login now</a></p>
                </div>

            </div>


        </form>

    </div>
</body>

